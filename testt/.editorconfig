# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{html,js,css,json,yaml,xml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.toml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[justfile]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
